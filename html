    <script>
        function relogio(){
            var data = new Date();
            segun = data.getSeconds();
            minu = data.getMinutes();
            hours = data.getHours();
            var hora = hours + ":" + minu+":"+segun;
            document.getElementById("rel").value=hora;
        }
        var tempo = setInterval(relogio,1000);

        
    </script>
